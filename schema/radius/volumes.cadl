// @discriminator("kind")
union Volume {
    ephemeralVolume: EphemeralVolume;
    persistentVolume: PersistentVolume;
}

model EphemeralVolume {
    kind: "ephemeral";
    mountPath: string;
    managedStore: "memory" | "disk";
}

model PersistentVolume {
    kind: "persistent";
    mountPath: string;
    rbac?: "read" | "write";
    source: string;
}